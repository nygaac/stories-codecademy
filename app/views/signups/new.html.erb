<div class="signup">
  <div class="container">
    <h1 class="text-center">Get the latest updates from Stories</h1>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <%= form_for(@signup) do |f| %>  
          <div class="form-group">
            <%= f.label :firstname, "First Name" %><br>
            <%= f.text_field :firstname , class: "form-control" %><br>
          </div>
          <div class="form-group">
            <%= f.label :email, "Email" %><br>
            <%= f.text_field :email , class: "form-control" %><br>
          </div>
        	<%= f.submit "Join", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
</div>